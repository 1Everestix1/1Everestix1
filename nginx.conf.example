server {
    listen 80;
    listen [::]:80;
    server_name prox-script-hub.local;  # Замените на ваш домен
    
    # Редирект с HTTP на HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name prox-script-hub.local;  # Замените на ваш домен

    # SSL настройки
    ssl_certificate /etc/nginx/ssl/prox-script-hub.crt;     # Путь к SSL сертификату
    ssl_certificate_key /etc/nginx/ssl/prox-script-hub.key; # Путь к ключу
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    # Современные настройки SSL
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # HSTS
    add_header Strict-Transport-Security "max-age=63072000" always;

    # Корневая директория сайта
    root /var/www/prox-script-hub;  # Замените на путь к вашему сайту
    index index.html;

    # Безопасность
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' https: data: 'unsafe-inline' 'unsafe-eval';" always;

    # Логи
    access_log /var/log/nginx/prox-script-hub.access.log combined buffer=512k flush=1m;
    error_log /var/log/nginx/prox-script-hub.error.log warn;

    # Обработка ошибок
    error_page 404 /404.html;
    location = /404.html {
        internal;
        root /var/www/prox-script-hub;  # Замените на путь к вашему сайту
    }

    # Основные настройки локации
    location / {
        try_files $uri $uri/ /index.html =404;
        expires 30d;
    }

    # Кэширование статических файлов
    location ~* \.(css|js|jpg|jpeg|png|gif|ico|svg|woff2|woff|ttf|eot)$ {
        expires 30d;
        add_header Cache-Control "public, no-transform";
        access_log off;
        # Защита от хотлинкинга
        valid_referers none blocked prox-script-hub.local;  # Замените на ваш домен
        if ($invalid_referer) {
            return 403;
        }
    }

    # JavaScript файлы
    location ~* \.js$ {
        add_header Content-Type "application/javascript";
        expires 30d;
    }

    # CSS файлы
    location ~* \.css$ {
        add_header Content-Type "text/css";
        expires 30d;
    }

    # Сжатие контента
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript application/xml+rss application/atom+xml image/svg+xml;

    # Отключение логов для favicon и robots.txt
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }
    location = /robots.txt {
        log_not_found off;
        access_log off;
    }

    # Защита от доступа к скрытым файлам
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Защита от PHP-инъекций
    location ~ \.php$ {
        return 404;
    }

    # Увеличение буфера для WebSocket соединений
    location /ws {
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }

    # Настройки для API
    location /api/ {
        proxy_pass http://localhost:3000;  # Замените на ваш бэкенд
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}